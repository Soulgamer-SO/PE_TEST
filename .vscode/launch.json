{
    "version": "2.0.0",
    "configurations": [
        {
            "preLaunchTask": "Linux_debug_make",
            "name": "LinuxDebugMake",
            "type": "cppdbg",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/project/debug/PE_TEST",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "preLaunchTask": "Linux_release_make",
            "name": "LinuxReleaseMake",
            "type": "cppdbg",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/project/release/PE_TEST",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "preLaunchTask": "Win_debug_make",
            "name": "WinDebugMake",
            "type": "cppdbg",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/project/debug/PE_TEST.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "preLaunchTask": "Win_release_make",
            "name": "WinReleaseMake",
            "type": "cppdbg",
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "gdb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/project/release/PE_TEST.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}